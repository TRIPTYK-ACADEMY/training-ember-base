<div class="w-128">
  <h2>Les musiques de <span class="text-blue-500">{{this.model.name}}</span> :</h2>
  {{#each this.model.songs as |song|}}
    <div class="flex justify-between">
      <div>
        {{song.title}} <span class="text-teal-200 text-sm">by {{get song.band "name"}}</span>
      </div>  
      <div class="flex">
        {{!-- <StarRating @rating={{song.rating}} @item={{song}} /> --}}
        <StarRating @rating={{song.rating}} @item={{song}} as | stars |>
          {{#each stars as |star|}}
            <button type="button"  {{on "click" (fn this.setRating star.rating song)}}>
              {{#if star.isFull}}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" class="h-4 fill-current text-blue-400 mx-1">
                  <path d="M10 3.22l-.61-.6a5.5 5.5 0 0 0-7.78 7.77L10 18.78l8.39-8.4a5.5 5.5 0 0 0-7.78-7.77l-.61.61z"/>
                </svg>
              {{else}}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" class="h-4 fill-current text-white mx-1">
                  <path d="M10 3.22l-.61-.6a5.5 5.5 0 0 0-7.78 7.77L10 18.78l8.39-8.4a5.5 5.5 0 0 0-7.78-7.77l-.61.61z"/>
                </svg>
              {{/if}}
            </button>
          {{/each}}
        </StarRating>
      </div>
    </div>
  {{/each}}
  {{#if this.isAddingASong}}
    <form class="flex mt-2" {{on "submit" this.addSong}} {{on "reset" this.cancelSong}}>
      <Input
        @type="text"
        @value={{this.selectSong.title}}
        placeholder="Nouvelle musique"
      />

      <button class="btnPrimary ml-4"
        type="submit"
        disabled={{this.isAddButtonDisabled}}
      >
        Ajouter
      </button>
      <button class="btnSecondary ml-4"
        type="reset"
      >
        Annuler
      </button>
    </form>
  {{else}}
    <button type="button" class="btnIcon" {{on "click" (fn this.addingSong)}}>
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
        <path d="M11 9h4v2h-4v4H9v-4H5V9h4V5h2v4zm-1 11a10 10 0 1 1 0-20 10 10 0 0 1 0 20zm0-2a8 8 0 1 0 0-16 8 8 0 0 0 0 16z"/>
      </svg>
      Ajouter une musique
    </button>
  {{/if}}
</div>